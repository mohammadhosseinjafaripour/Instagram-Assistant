<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="bottom"
    app:behavior_hideable="true"
    app:behavior_peekHeight="500dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="15dp"
        android:background="@drawable/dialog_bg_white"
        android:minWidth="300dp"
        android:minHeight="250dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/close_img"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_close" />


        <ImageView
            android:id="@+id/ic_bio"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_biography" />

        <TextView
            android:id="@+id/bio_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ic_bio"
            android:layout_margin="25dp"
            android:textSize="17dp"
            android:text="it's about me i'm so good in programming but..." />


        <Button
            android:id="@+id/copy_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#455A64"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text="Copy"
            android:textColor="@android:color/white" />


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>